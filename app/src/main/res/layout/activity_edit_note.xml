<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/edit_note_very_light_yellow"
    android:clickable="true"
    android:orientation="vertical"
    tools:context=".Activities.EditNoteActivity">

    <include
        android:id="@+id/edit_note_tool_bar"
        layout="@layout/edit_note_tool_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/edit_note_editor_options_hsv"
        android:layout_below="@+id/edit_note_tool_bar"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_note_title_et"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Title Here"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColorHint="@color/hint_text_light_grey"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+id/edit_note_spinners_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_note_title_et"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_note_entry_tag" />

                <Spinner
                    android:id="@+id/edit_note_category_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_mood" />

                <Spinner
                    android:id="@+id/edit_note_mood_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/edit_note_spinners_ll"
            android:layout_marginTop="16dp"
            android:background="@drawable/half_transparent_white_rounded_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <com.github.irshulx.Editor
                    android:id="@+id/edit_note_editor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    app:placeholder="Start writing here..."
                    app:render_type="Editor" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <HorizontalScrollView
        android:id="@+id/edit_note_editor_options_hsv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="@color/main_yellow"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/editor_bold_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/editor_bold" />

            <ImageView
                android:id="@+id/editor_italic_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/editor_italic" />

            <ImageView
                android:id="@+id/editor_link_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/editor_link" />

            <ImageView
                android:id="@+id/editor_image_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/editor_image" />

            <ImageView
                android:id="@+id/editor_image2_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/editor_image" />

            <ImageView
                android:id="@+id/editor_image3_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/editor_image" />

            <ImageView
                android:id="@+id/editor_image4_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/editor_image" />

            <ImageView
                android:id="@+id/editor_image5_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/editor_image" />

        </LinearLayout>


    </HorizontalScrollView>


</RelativeLayout>